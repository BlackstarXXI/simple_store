<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock_quantity %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <% 100.times puts"Chunky Bacon\n" %>
</p>

<p>
  <% @products.each do |product| %>
    <% count += 1 %>
    <% sum += product.price %>
    <% quan_sum += product.stock_quantity %>
  <% end %>
  <% average = sum / count %>
  <% puts "Average price: #{average}" %>
  <% puts "Maximum price: #{(Products.price).max}" %>
  <% puts "Total products: #{count}" %>
  <% puts "Total quantity: #{quan_sum}" %>
</p>

<br>

<%= link_to 'New Product', new_product_path %>
